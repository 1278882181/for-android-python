<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/resloctions"
    android:background="#fff5f5f5"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <SearchView
            android:id="@+id/postsearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:focusable="false"
            android:iconifiedByDefault="false"
            android:queryHint="@string/home_search" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="182dp"
        app:srcCompat="@drawable/location1">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/blackground"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp">

        </TextView>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="397dp"
            android:layout_height="54dp"
            android:autofillHints="城市/区域"
            android:entries="@array/spinner_data"
            android:textSize="10sp"
            android:theme="@style/life_spinner_style" />

        <View
            android:layout_width="388dp"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="397dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="真实姓名"
                    android:textColorHint="#7E7B7B"
                    android:textSize="16sp"
                    android:theme="@style/MyEditText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="电话"
                    android:inputType="phone"
                    android:textColorHint="#7E7B7B"
                    android:textSize="16sp"
                    android:theme="@style/MyEditText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:hint="-分机号"
                    android:textColorHint="#7E7B7B"
                    android:textSize="16sp"
                    android:theme="@style/MyEditText" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:layout_width="397dp"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:hint="详细地址（例如：*街*号）"
            android:textColorHint="#7E7B7B"
            android:textSize="16sp"
            android:theme="@style/MyEditText" />

        <EditText
            android:layout_width="397dp"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:hint="公司地址（选填）"
            android:textColorHint="#7E7B7B"
            android:textSize="16sp"
            android:theme="@style/MyEditText" />

        <EditText
            android:layout_width="397dp"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:hint="备注信息（选填）"
            android:textColorHint="#7E7B7B"
            android:textSize="16sp"
            android:theme="@style/MyEditText" />

        <TextView
            android:layout_width="397dp"
            android:layout_height="20dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="110dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:srcCompat="@drawable/new_post1" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:background="@drawable/button_red"
                android:theme="@style/MyButton"

                android:layout_weight="2"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
