<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    android:background="@drawable/star">

    <ImageView
        android:id="@+id/reiv_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/girl"/>

    <LinearLayout
        android:id="@+id/rely_0"
        android:layout_below="@+id/reiv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/re_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:inputType="textNoSuggestions"
            android:drawableLeft="@drawable/phone2"
            android:drawablePadding="5dp"
            android:hint="请输入手机号码"

            android:lines="1"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:theme="@style/MyEditText" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rely_1"
        android:layout_below="@+id/rely_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/re_username"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textNoSuggestions"
            android:layout_below="@id/iv_1"
            android:layout_marginTop="10dp"
            android:hint="请输入用户名"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            android:lines="1"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:theme="@style/MyEditText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rely_2"
        android:layout_below="@+id/rely_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/re_password1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:hint="请输入密码"
            android:inputType="textNoSuggestions"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="5dp"
            android:lines="1"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:theme="@style/MyEditText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rely_3"
        android:layout_below="@+id/rely_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/re_password2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="5dp"
            android:inputType="textNoSuggestions"
            android:hint="请再输入一次密码"
            android:lines="1"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:theme="@style/MyEditText" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:background="@drawable/button_ground"
        android:text="注册"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/im_qq"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/qq" />

</RelativeLayout>
